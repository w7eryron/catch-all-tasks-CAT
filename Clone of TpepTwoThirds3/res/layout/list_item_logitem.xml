<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
   

    <TextView
        android:id="@+id/log_item_list_item_criteriaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:text="Criteria#"
        android:textStyle="bold" />
    
      <TextView
        android:id="@+id/log_item_list_item_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:text="LogItem Title"
        android:textStyle="bold" />
    
     <TextView 
        android:id="@+id/log_item_list_item_dateTextView" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_item_list_item_titleTextView"
        android:layout_toLeftOf="@id/log_item_list_item_criteriaTextView"
        android:textStyle="bold"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="LogItem Date"
        />

</RelativeLayout>
